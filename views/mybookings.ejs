<!DOCTYPE html>
<html>
<head>
  <title>My Bookings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <div class="container">
    <h2 class="mb-4">Your Booking History</h2>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Vehicle</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Total Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (bookings.length === 0) { %>
          <tr>
            <td colspan="5">No bookings found.</td>
          </tr>
        <% } else { %>
          <% bookings.forEach(booking => { %>
            <tr>
              <td><%= booking.vehicle_name %></td>
              <td><%= new Date(booking.start_date).toDateString() %></td>
              <td><%= new Date(booking.end_date).toDateString() %></td>
              <td>â‚¹<%= booking.total_amount %></td>
              <td>
                <a href="/bookings/edit/<%= booking.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/bookings/delete/<%= booking.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this booking?')">Delete</a>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
    <a href="/" class="btn btn-secondary">Back to Home</a>
  </div>
</body>
</html>
